@page
@model ContosoPizza.Pages.PizzaListModel
@{
    ViewData["Title"] = "Pizza List";
}

<div class="text-center">
    <h1 class="display-4">Pizza List</h1>
    
</div>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
            <th scope="col">Tamanho</th>
            <th scope="col">Gluten Free</th>
            <th scope="col">Delete</th>
            
        </tr>
     </thead>
     <tbody>
         @foreach(var pizza in Model.PizzaList)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Price</td>
                <td>@pizza.Size</td>
                <td>@(pizza.IsGlutenFree ? "✔": string.Empty)</td>
                <td>
                    <from method="post" asp-page-hadler="delete"asp-route-id="@pizza.Id">
                        <button class="btn btn-dark">Deletar</button>
                    </from>
                </td>
            </tr>
        }
    </tbody>
</table>


